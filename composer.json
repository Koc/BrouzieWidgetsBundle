{
    "name": "brouzie/widgets-bundle",
    "type": "symfony-bundle",
    "description": "This bundle allows create and render widgets - configurable reusable blocks (like in Magento).",
    "keywords": [
        "widgets",
        "blocks",
        "hmvc"
    ],
    "homepage": "https://github.com/Koc/BrouzieWidgetsBundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Konstantin Myakshin",
            "email": "koc-dp@yandex.ru"
        }
    ],
    "archive": {
        "exclude": [
            "/Tests"
        ]
    },
    "require": {
        "php": "^5.5.9|^7.0",
        "symfony/options-resolver": "~2.8|~3.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "symfony/event-dispatcher": "~2.8|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "symfony/phpunit-bridge": "~2.8|~3.0",
        "symfony/dependency-injection": "~2.8|~3.0",
        "symfony/http-kernel": "~2.8|~3.0",
        "symfony/cache": "~3.1",
        "twig/twig": "~1.26",
        "psr/log": "~1.0"
    },
    "suggest": {
        "twig/twig": "If you'd want to use twig renderer",
        "symfony/cache": "If you'd want to cache widgets responses"
    },
    "autoload": {
        "psr-4": {
            "Brouzie\\WidgetsBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6.x-dev"
        }
    }
}
